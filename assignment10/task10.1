def discount(price, category):
    """
    Calculates the discounted price based on category and original price.

    Args:
        price (float or int): The original price of the item.
        category (str): The category of the customer (e.g., 'student').

    Returns:
        float: The final price after applying the discount.
    """
    discount_percentage = 0.0

    if category == "student":
        if price > 1000:
            discount_percentage = 0.10  # 10% discount for students over 1000
        else:
            discount_percentage = 0.05  # 5% discount for students 1000 or less
    else:  # Non-student categories
        if price > 2000:
            discount_percentage = 0.15  # 15% discount for non-students over 2000
        # Otherwise, discount_percentage remains 0.0 (no discount)

    return price * (1 - discount_percentage)

