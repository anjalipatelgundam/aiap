class Employee:
    """Represents an employee with a name and salary."""

    def __init__(self, name, salary):
        """
        Initializes a new Employee instance.

        Args:
            name (str): The name of the employee.
            salary (float or int): The salary of the employee.
        """
        self.name = name
        self.salary = float(salary)

    def increase_salary(self, percentage):
        """
        Increases the employee's salary by a given percentage.

        Args:
            percentage (float or int): The percentage to increase the salary by.
        """
        if percentage < 0:
            print("Percentage increase cannot be negative.")
            return
        self.salary += (self.salary * percentage / 100)

    def display_info(self):
        """
        Prints the employee's name and current salary in a formatted way.
        """
        print(f"Employee: {self.name}, Salary: ${self.salary:,.2f}")

